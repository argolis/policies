

bundle agent vim {

    packages:
        "vim"
            policy => "present";


    files:    
        "/root/.vimrc"
            comment       => "~/.vimrc for root",
            create        => "true",
            perms         => m("644"),
            edit_line     => expand_template("$(sys.inputdir)/files/root/.vimrc"),
            edit_defaults => empty;

}

